const int portaC = 10;
const int pinoLED_0 = 0;
const int pinoLED_1 = 1;
const int pinoLED_2 = 2;
const int pinoLED_3 = 3;

void setup() {
  // put your setup code here, to run once:
  pinMode(pinoLED_0, OUTPUT);  // Definindo o pino como OUTPUT
  pinMode(pinoLED_1, OUTPUT);
  pinMode(pinoLED_2, OUTPUT);
  pinMode(pinoLED_3, OUTPUT);
  Serial.begin(9600);

  digitalWrite(pinoLED_0, LOW);
  digitalWrite(pinoLED_1, LOW); 
  digitalWrite(pinoLED_2, LOW); 
  digitalWrite(pinoLED_3, LOW); 
}

void loop() {
  // put your main code here, to run repeatedly:
  char a = Serial.read();
  if(a == '0'){
    digitalWrite(pinoLED_0, HIGH);
    digitalWrite(pinoLED_1, LOW);
    digitalWrite(pinoLED_2, LOW);
    digitalWrite(pinoLED_3, LOW);
  }else if(a == '1'){
    digitalWrite(pinoLED_0, LOW);
    digitalWrite(pinoLED_1, HIGH);
    digitalWrite(pinoLED_2, LOW);
    digitalWrite(pinoLED_3, LOW);
  }else if(a == '2'){
    digitalWrite(pinoLED_0, LOW);
    digitalWrite(pinoLED_1, LOW);
    digitalWrite(pinoLED_2, HIGH);
    digitalWrite(pinoLED_3, LOW);
  }else if(a == '3'){
    digitalWrite(pinoLED_0, LOW);
    digitalWrite(pinoLED_1, LOW);
    digitalWrite(pinoLED_2, LOW);
    digitalWrite(pinoLED_3, HIGH);
    }
    
}
